<tr id="book_<%= book.id %>">
<td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= summary(book) %></td>
    <td><%= link_to t("books.index.show_book"), book_path(book.slug) %></td>
    <td><%= link_to t("books.index.edit_book"), edit_book_path(book.slug) %></td>
    <td><%= link_to t("books.index.delete_book"), book_path(book.slug), method: :delete, remote: true, data: {confirm: "Are you sure ?"} %></td>
</tr>
